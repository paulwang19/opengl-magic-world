{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build x64 Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "opengl-magic-world.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/t:Build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "clear": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build Midterm-Project for x64 Debug configuration"
        },
